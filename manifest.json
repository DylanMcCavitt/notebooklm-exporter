{
  "manifest_version": 3,
  "name": "NotebookLM â†’ PDF (with Math)",
  "version": "0.1.0",
  "description": "Export NotebookLM chat/notes to PDF with properly rendered math (KaTeX).",
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://notebooklm.google.com/*"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "How to export",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": [
        "src/content/helpers.js",
        "src/content/dom.js",
        "src/content/ui.js",
        "src/content/export.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/styles/*",
        "src/vendor/katex/*",
        "src/print.html",
        "src/print.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
